{{!
    @template mod_opencast/series

    This template renders the series.

    Example context (json):
    {
        episodes: [{

        }],
        listviewlink: ""
    }
}}
<ul class="series">
    {{#episodes}}
        <li class="episode" title="{{ title }}">
            <a href="{{link}}">
                <div class="thumbnail">
                    <img src="{{{ thumbnail }}}" alt="{{ title }}"/>
                    {{# duration }}
                        <span class="duration">{{ duration }}</span>
                    {{/duration}}
                </div>
                <div class="title">{{ title }}</div>
                <span class="date">{{ date }}</span>
            </a>
        </li>
    {{/episodes}}
</ul>
