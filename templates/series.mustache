{{!
    @template mod_opencast/series

    This template renders the series.

    Example context (json):
    {
        episodes: [{

        }]
    }
}}
<div class="series">
    {{#episodes}}
        <div class="episode">
            <img src="{{{ thumbnail }}}" alt="{{ title }}"/>
            <div class="text">
                <span class="title">{{ title }}</span><br>
                <span class="date">{{ start }}</span>
                <span class="duration">{{ duration }}</span>
            </div>
        </div>
    {{/episodes}}
</div>